            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "modifiers": ["left_shift"],
              "key_code": "9"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
