          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "equal_sign"
            }
          ],
          "conditions": [
