          "type": "basic",
          "from": {
            "key_code": "6",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u",
